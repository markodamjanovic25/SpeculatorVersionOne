                        </div>

                        <div class="lista-zelja-items">
                            @if (Model.proizvodi.Count > 0)
                            {
                                <ul class="list-group">
                                    @foreach (var item in Model.proizvodi)
                                    {
                                        <li class="list-group-item bg-dark lista-zelja-item">
                                            <p class="text-light text-left">@Html.DisplayFor(modelItem => item.NazivProizvoda)</p>
                                            <p class="text-light text-left">@Html.DisplayFor(modelItem => item.CenaProizvoda)</p>
