                            }
                        </div>
                        <div class="lista-zelja-dodaj">
                            <button class="btn btn-warning text-light float-right mt-4 mr-4" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                                Dodaj novi
                            </button>
                            <div class="collapse" id="collapseExample">
                                <div class="card bg-light ml-3 card-body">


                                    <form method="post" asp-action="NoviProizvod">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-row align-items-center">
                                            <div class="col-auto">
                                                <label class="sr-only" for="inlineFormInputGroup"></label>
                                                <div class="input-group mb-2">
                                                    <div class="input-group-prepend">
                                                        <div class="input-group-text">Aa</div>
                                                    </div>
                                                    <input asp-for="proizvod.NazivProizvoda" class="form-control" id="inlineFormInputGroup">
                                                    <span asp-validation-for="proizvod.NazivProizvoda" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <label class="sr-only" for="inlineFormInputGroup"></label>
                                                <div class="input-group mb-2">
                                                    <div class="input-group-prepend">
                                                        <div class="input-group-text">$</div>
                                                    </div>
                                                    <input asp-for="proizvod.CenaProizvoda" class="form-control" id="inlineFormInputGroup">
                                                    <span asp-validation-for="proizvod.CenaProizvoda" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <button type="submit" class="btn btn-warning mb-2">Dodaj</button>
                                                <small class="text-danger ml-2" id="dodaj-trosak-msg" hidden>Neuspešno!</small>
                                            </div>
                                        </div>
                                    </form>

                                </div>
