@model SpeculatorVersionOne.ViewModels.KorisnikEditViewModel

@{
    ViewData["Title"] = "View";
}

<hr />
<div class="prikaz-korisnika bg-light">
<div class="row text-center">
    <div class="col-12">
        <form method="POST" asp-action="Edit">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label class="text-dark control-label">Ime</label>
                <label asp-for="korisnik.Ime" class="control-label text-primary">@Html.DisplayFor(model => model.korisnik.Ime)</label>
            </div>

            <div class="form-group">
                <label class="text-dark control-label">Prezime</label>
                <label asp-for="korisnik.Prezime" class="control-label text-primary">@Html.DisplayFor(model => model.korisnik.Prezime)</label>
            </div>

            <div class="form-group">
                <label class="text-dark control-label">Stanje na racunu</label>
                <label asp-for="korisnik.StanjeNaRacunu" class="control-label text-primary">@Html.DisplayFor(model => model.korisnik.StanjeNaRacunu)</label>
                <div class="d-inline control-label edit-icon" id=editStanje>
                        <a onclick="ShowPoljeZaStanje()">
                            <i class="far fa-edit ml-2"></i>
                            </a>
                     </div>
                    <input asp-for="korisnik.StanjeNaRacunu" class="control-label m-auto" style="display: none;" id="poljeZaUnosStanja" />
            </div>

            <input type="hidden" asp-for="korisnik.Id" />
            <div class="form-group">
                <label class="text-dark control-label">Email</label>
                <label asp-for="korisnik.Email" class="control-label text-primary">@Html.DisplayFor(model => model.korisnik.Email)</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
</div>

